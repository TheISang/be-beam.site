{
  "include": [
    ".storybook/**/*",
    "app/**/*",
    "server/**/*",
    "shared/**/*",
    ".storybook/**/*",
    ".react-router/types/**/*",
    "*.ts"
  ],
  "exclude": ["public/mockServiceWorker.js", "build/", "node_modules", "dist"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "@/*": ["./app/*"],
      ".react-router/*": ["./.react-router/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
